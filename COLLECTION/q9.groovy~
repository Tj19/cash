groovy> String s = "this string needs to be split" 
groovy> println s.tokenize(" ") 
groovy> println s.tokenize() 
groovy> println s.tokenize(/\s/) 

groovy> String s2 = "this string needs to be split" 
groovy> println s2.split(" ") 
groovy> println s2.split(/\s/)

groovy> String s3 = "are.you.trying.to.split.me.sir?" 
groovy> println s3.tokenize(".") 
groovy> println s3.split(".") 


 
